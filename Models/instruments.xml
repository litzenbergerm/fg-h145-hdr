<?xml version="1.0"?>

<PropertyList>

  <animation>
    <type>range</type>
    <min-m>0</min-m>
    <max-m>50</max-m>
  </animation>
 
  <!-- Main instrument panel -->       
  
  <model>
     <name>mainpanel</name>
