  </model>
  
  <model>
      <path>Aircraft/ec145/Models/instruments/warn-D2/warn.xml</path>
      <offsets>
              <x-m>-2.778</x-m>
              <y-m>-0.015</y-m>
              <z-m>0.487</z-m>
              <pitch-deg>-15</pitch-deg>
      </offsets>
  </model>
  
  <model>
      <path>Aircraft/ec145/Models/instruments/compass/compass.xml</path>
      <offsets>
              <x-m>-2.76</x-m>
              <y-m>-0.005</y-m>
              <z-m>0.657</z-m>
              <pitch-deg>0</pitch-deg>
      </offsets>
  </model>
  
