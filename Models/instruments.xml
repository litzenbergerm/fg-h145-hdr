  <!-- the GTN750 was modelled according to dimensions found in spec sheets.
       however, when integrated in the aircraft model it appears smaller than on
       photographs, therefore its up-scaled.
  -->
        
   <model>
      <name>GTN7501</name>
      <path>Aircraft/ec145/Models/instruments/GTN750/gtn750-2.xml</path>
      <offsets>
          <x-m>-2.60</x-m>
          <y-m>-0.095</y-m>
          <z-m>0.08</z-m>
          <pitch-deg>-61</pitch-deg>
      </offsets>
      <overlay>
        <animation n="200">
          <type>scale</type>
          <property>constants/zero</property>              
          <x-offset>1.0</x-offset>
          <y-offset>1.095</y-offset>
          <z-offset>1.095</z-offset>
        </animation>
      </overlay>  
  </model>

  
   <model>
      <name>GTN7502</name>
      <path>Aircraft/ec145/Models/instruments/GTN750/gtn750-1.xml</path>
