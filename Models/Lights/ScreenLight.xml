<?xml version="1.0" encoding="UTF-8"?>

<PropertyList>
 
  <light>
    <name>ScreenLight</name>
    <type>point</type>
    <position>
        <x>0.0</x>
        <y>0.0</y>
        <z>0.0</z>
      </position>
      <direction>
        <x>0.0</x>
        <y>0.0</y>
        <z>1.0</z>
      </direction>
      <color>
        <r>1.0</r>
        <g>1.0</g>
        <b>1.0</b>
      </color>
      <dim-factor>
        <expression>
          <product>
            <value>-1</value>
            <sum>
              <product>
                <max>
                  <pow>
                    <cos><property>/sim/time/sun-angle-rad</property></cos>
                    <value>0.3</value>
                  </pow>
                  <value>0</value>
                </max>
                <value>0.6</value>
              </product>
              <value>-1</value>
            </sum>
          </product>
        </expression>
      </dim-factor>
      <attenuation>
        <c>1.0</c>
        <l>0.0</l>
        <q>0.0</q>
      </attenuation>
    <spot-exponent>2</spot-exponent>
    <spot-cutoff>80</spot-cutoff>
    <range-m>0.3</range-m>
    <intensity>2</intensity>
  </light>

  <animation>
    <type>select</type>
    <object-name>ScreenLight</object-name>
    <condition>
     <greater-than>
        <property>/systems/electrical/outputs/avio[1]</property>
        <value>10.0</value>
     </greater-than>
    </condition>
  </animation>
  
</PropertyList>
