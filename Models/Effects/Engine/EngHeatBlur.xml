<?xml version="1.0" encoding="ISO-8859-1"?>

<PropertyList>

  <particlesystem>
  
    <name>heatblur</name>
    <texture>Ext.png</texture>
    <emissive>false</emissive>
    <lighting>true</lighting>

    <offsets>
      <x-m>0</x-m>
      <y-m>0</y-m>
      <z-m>0</z-m>
      <pitch-deg>0</pitch-deg>
    </offsets>
    
    <attach>local</attach>
    
    <placer>
      <type>point</type>
    </placer>
    
    <shooter>
    
      <theta-min-deg>10</theta-min-deg>
      <theta-max-deg>10</theta-max-deg>
      <phi-min-deg>10</phi-min-deg>
      <phi-max-deg>10</phi-max-deg>
      
      <speed-mps>
        <value>2</value>
        <spread>0.2</spread>
      </speed-mps>
      
      <rotation-speed>
        <x-min-deg-sec>-300</x-min-deg-sec>
        <y-min-deg-sec>-5</y-min-deg-sec>
        <z-min-deg-sec>-5</z-min-deg-sec>
        <x-max-deg-sec>300</x-max-deg-sec>
        <y-max-deg-sec>5</y-max-deg-sec>
        <z-max-deg-sec>5</z-max-deg-sec>
      </rotation-speed>
      
    </shooter>
    
    <counter>
      <particles-per-sec>
        <value>30</value>  
        <spread>3</spread>
      </particles-per-sec>
    </counter>
    
    <align>billboard</align>
    
    <particle>
    
      <start>
        <color>
          <red>
            <value>1.0</value>
          </red>
          <green>
            <value>1.0</value>
          </green>
          <blue>
            <value>1.0</value>
          </blue>
          <alpha>
            <value>0.15</value>
          </alpha>
        </color>
        <size>
          <value>0.15</value>
        </size>
      </start>
      
      <end>
        <color>
          <red>
            <value>1.0</value>
          </red>
          <green>
            <value>1.0</value>
          </green>
          <blue>
            <value>1.0</value>
          </blue>
          <alpha>
            <value>0.1</value>
          </alpha>
        </color>
        <size>
          <value>0.2</value>
        </size>
      </end>
      
      <life-sec>
        <value>0.5</value>
      </life-sec>
      
      <mass-kg>0.1</mass-kg>
      <radius-m>0.2</radius-m>
      
    </particle>
    
    <program>
      <fluid>air</fluid>
      <gravity>false</gravity>
      <wind>false</wind>
    </program>
    
  </particlesystem>
  
</PropertyList>
