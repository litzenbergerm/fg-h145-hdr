<?xml version="1.0"?>
<!--
************************************************************************
H 145 simulation config. This is the BK117-D2 (H 145) specific model file.

Common parameters are loaded via the ec145-base.xml file

************************************************************************-->

<PropertyList include="ec145-base.xml">

  <devel type="bool">false</devel>               <!--to display engine parameters on-screen-->
  <quickstart type="bool">false</quickstart>     <!--to start engines immediately on sim start-->
  
  <sim>
      <aero>h145m</aero>
      <description>Eurocopter H-145M</description>
      <long-description>Experimental version for HDR/PBR</long-description>
      <author>Melchior Franz (Nasal  + config)Heiko Schulz, Maik Justus, StuartC (FDM), Melchior Franz (Nasal) Martien van der P. (3d), litzi  ( Eurocopter Screens ), Avionyx</author>
      <status>1.2</status>
      <license>GPL v2</license>
      <aircraft-version>1.2</aircraft-version>
      <minimum-fg-version>2020.4.0</minimum-fg-version>
      
      <aircraft-registration type="string">D-HECE</aircraft-registration>
      <tags>
        <tag>H-145M</tag>
        <tag>BK-117 D2</tag>
      </tags>
      
      <checklists include="h145m-checklists.xml"/>

      <model>
        <path archive="y">Aircraft/ec145/Models/H-145M.xml</path>
        <rescue-lift>0.01</rescue-lift>
        <rescue type="bool">false</rescue>
        <bk117>
          <particles>
            <enabled type="bool">true</enabled>
          </particles>
          <headsetholder>
            <position-deg type="float">90.0</position-deg>
          </headsetholder>
        </bk117>
         
      </model>

      <systems>
                <propulsion include="Systems/h145m-propulsion.xml"/>
      </systems>

      <startup>
              <splash-texture>Aircraft/ec145/splash.jpg</splash-texture>
      </startup>

      <previews>
        <preview>
              <type>interior</type>
              <splash type="bool">true</splash>
              <path>Splash/splash.png</path>
        </preview>
        <preview>
              <type>exterior</type>
              <splash type="bool">true</splash>
              <path>Splash/splash1.png</path>
        </preview>
        <preview>
              <type>exterior</type>
              <splash type="bool">true</splash>
              <path>Splash/splash2.png</path>
        </preview>
        <preview>
              <type>interior</type>
              <splash type="bool">true</splash>
              <path>Splash/splash3.png</path>
        </preview>
        <preview>
              <type>exterior</type>
              <splash type="bool">true</splash>
              <path>Splash/splash4.png</path>
        </preview>
        <preview>
              <type>exterior</type>
              <splash type="bool">true</splash>
              <path>Splash/splash5.png</path>
        </preview>
        <preview>
              <type>interior</type>
              <splash type="bool">true</splash>
              <path>Splash/splash6.png</path>
        </preview>

      </previews>

      <help>
          <key>
            <name>]</name>
            <desc>Start engines</desc>
          </key>
              
          <key>
            <name>[</name>
            <desc>Shut down engines</desc>
          </key>
              
          <key>
            <name>Ctrl d</name>
            <desc>Turn off SAS</desc>
          </key>
                    
          <key>
            <name>w</name>
            <desc>Rotate Searchlight Up</desc>
          </key>
          <key>
            <name>a</name>
            <desc>Rotate Searchlight Left</desc>
          </key>
          <key>
            <name>s</name>
            <desc>Rotate Searchlight Down</desc>
          </key>
          <key>
            <name>d</name>
            <desc>Rotate Searchlight Right</desc>
          </key>   
          <key>
            <name>r</name>
            <desc>Activate Winch Man ( see notes below )</desc>
          </key>  
          <line>  Rotorbrake can only be activated by the lever on the cabin floor RHS of pilot seat.</line> 
          <line>All external lights are default to OFF</line>
          <line>MFD modes can be changed by pressing the buttons on the MFD.</line>  
          <line>  Landing light + Search light ( when fitted ) are switched on/off from the switches on the collective.</line>
          <line>  Search light ( when fitted ) needs to be armed first, via HISL sw. on overhead panel.</line>
          <line> All other exterior lights are controlled from the switches in the overhead panel.</line>
          <line> The Winch man is only available on winch equipped payloads. He can only be seen when he has been activated and the sliding door is open..</line>
          <line></line>
          <line>Emergency Floatation system</line>
          <line> The system is currently available on SAY and Offshore payloads only.</line>
          <line>When fitted the arming switch is available on the overhead panel.</line>      
          <line>When armed the switch on the overhead will glow read. The red trigger switch will be available on the collective</line>
          <line></line>
      </help>
	  
	  <!-- payload definitions -->
	  
	  <weight n="0">
			<name>Pilot</name>
			<weight-lb>180</weight-lb>
			<max-lb>300</max-lb>
		</weight>

		<weight n="1">
			<name>Co-Pilot</name>
			<weight-lb>180</weight-lb>
			<max-lb>300</max-lb>
		</weight>

                <weight n="2">
                        <name>Passengers</name>
                        <weight-lb>0</weight-lb>
                        <max-lb>2000</max-lb>
                </weight>

                <weight n="3">
                        <name>LongLine</name>
                        <weight-lb>0</weight-lb>
                        <max-lb>3307</max-lb>
                </weight>

                <weight n="4">
                        <name>Not used</name>
                        <weight-lb>0</weight-lb>
                        <max-lb>0</max-lb>
                </weight>


		<weight n="5">
                      <name>Load</name>
                      <weight-lb>0</weight-lb>
                      <selected>none</selected>
                      <opt>
                        <name>none</name>
                        <lbs>0</lbs>
                      </opt>

                      <opt>
                        <name>Law Enforcement</name>
                        <lbs>319.1</lbs>
                      </opt>

                      <opt>
                        <name>Passenger</name>
                        <lbs>199.3</lbs>
                      </opt>

                      <opt>
                        <name>Passenger-offshore</name>
                        <lbs>297.4</lbs>
                      </opt>

                      <opt>
                        <name>SAR</name>
                        <lbs>670</lbs>
                      </opt>

                      <opt>
                        <name>Medivac</name>
                        <lbs>576.1</lbs>
                      </opt>
					  
					  <opt>
                        <name>Guns</name>
                        <lbs>1576.1</lbs>
                      </opt>
					  
					    <opt>
                        <name>Rockets</name>
                        <lbs>1576.1</lbs>
                      </opt>
					  
					    <opt>
                        <name>Multi role</name>
                        <lbs>1576.1</lbs>
                      </opt>
					  
                </weight>

                <flir>
                        <view type="int">105</view>
                        <weight type="int">5</weight>
                        <options>
                                <name>SAR</name>
                                <name>Law Enforcement</name>
                        </options>
                </flir>
      
    </sim>
    
    <instrumentation>
            <!-- For the Helionix panels add this to the instrumentation section of the aircraft set file. -->
            
<!--        Note: You need to provide these parameters for all 4 Helionix MFDs even if your
            aircraft does not all use them .-->
        
            <mfd n="0">
              <mode-list type="string">init,fnd</mode-list>
              <nav-source type="string">NAV1</nav-source>
              <bearing-source type="string" n="0">NAV1</bearing-source>
              <bearing-source type="string" n="1">ADF1</bearing-source>
              <pwr-sw-pos type="bool">1</pwr-sw-pos> <!--initial position of the screens power switch-->
              <supply>/systems/electrical/outputs/avio[1]</supply>
            </mfd>  
            <mfd n="1">
              <!-- add 'dmap' to mode-list for FG1000 digital map mode -->
              <mode-list type="string">init,vmd,navd,dmap</mode-list>
              <nav-source type="string">NAV2</nav-source>
              <bearing-source type="string" n="0">NAV1</bearing-source>
              <bearing-source type="string" n="1">ADF1</bearing-source>
              <pwr-sw-pos type="bool">1</pwr-sw-pos> <!--initial position of the screens power switch-->
              <supply>/systems/electrical/outputs/avio[0]</supply>
              <dmap-zoom-level>10</dmap-zoom-level>
            </mfd>  
            <mfd n="2">
              <mode-list type="string">init,fnd,dmap,efb</mode-list>
              <nav-source type="string">NAV2</nav-source>
              <bearing-source type="string" n="0">NAV2</bearing-source>
              <bearing-source type="string" n="1">ADF1</bearing-source>
              <pwr-sw-pos type="bool">1</pwr-sw-pos> <!--initial position of the screens power switch-->
              <supply>/systems/electrical/outputs/avio[1]</supply>
            </mfd>  
            <mfd n="3">
              <mode-list type="string">stbyai</mode-list>
              <pwr-sw-pos type="bool">1</pwr-sw-pos> <!--initial position of the screens power switch-->
              <supply>/systems/electrical/outputs/stbyhor</supply>
            </mfd>  
            <apcp>
              <serviceable type="bool">1</serviceable>
              <atrim-bt type="bool">0</atrim-bt>
              <ap12-bt type="bool">0</ap12-bt>
              <alt-bt type="bool">0</alt-bt>
            </apcp>
    </instrumentation>

    <nasal>
            <!-- there is an issue with the sequence the .nas files get loaded in the h145m-set and the ec145-base file..
            -->
            <bk117 n="1">
                <file>Aircraft/ec145/Nasal/bk117.nas</file>
                <file>Aircraft/ec145/Nasal/liveriesH.nas</file>
                <file>Aircraft/ec145/Nasal/flitape.nas</file>
                <file>Aircraft/ec145/Nasal/enginecontrol-h145.nas</file>                   
                <file>Aircraft/ec145/Nasal/light-manager-h145.nas</file>                   
            </bk117>
      
            <!-- for the BK117 D2 load the Helionix screens-->
            
            <helionix>
                <file>Aircraft/ec145/Models/instruments/EUcopter-mfd-c/Nasal/helionix.nas</file>
                <file>Aircraft/ec145/Nasal/masterlist-h145.nas</file>
                <file>Aircraft/ec145/Models/instruments/GTN750/gtn750-1.nas</file>
                <file>Aircraft/ec145/Models/instruments/GTN750/gtn750-2.nas</file>
            </helionix>
    </nasal>

</PropertyList>
